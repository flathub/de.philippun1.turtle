{
  "app-id": "de.philippun1.turtlegit",
  "runtime": "org.gnome.Platform",
  "runtime-version": "44",
  "sdk": "org.gnome.Sdk",
  "command": "turtlegit_cli",
  "finish-args": [
    "--share=ipc",
    "--share=network",
    "--socket=fallback-x11",
    "--socket=wayland",
    "--filesystem=home",
    "--device=dri"
  ],
  "cleanup": [
    "/bin/git2",
    "/include",
    "/lib/pkgconfig"
  ],
  "modules": [
    {
      "name": "turtlegit",
      "buildsystem": "simple",
      "build-commands": [
        "install -D turtlegit_cli /app/bin/turtlegit_cli",
        "install -D data/de.philippun1.turtlegit.desktop /app/share/applications/de.philippun1.turtlegit.desktop",
        "install -D data/de.philippun1.turtlegit.gschema.xml /app/share/glib-2.0/schemas/de.philippun1.turtlegit.gschema.xml",
        "glib-compile-schemas /app/share/glib-2.0/schemas",
        "install -D setup.py /app/setup.py",
        "install -D package_information.py /app/package_information.py",
        "install -D data/icons/hicolor/scalable/apps/de.philippun1.turtlegit.svg /app/share/icons/hicolor/scalable/apps/de.philippun1.turtlegit.svg",
        "pip3 install --prefix=/app ."
      ],
      "sources": [
        {
          "sha256": "b42321c4c37fa73b8f532ef818b081e805600927d7cc59b56152ddd49a0bd77b",
          "type": "archive",
          "url": "https://gitlab.gnome.org/philippun1/turtlegit/-/archive/0.1/turtlegit-0.1.tar.gz"
        }
      ]
    },
    {
      "name": "libgit2",
      "buildsystem": "cmake",
      "build-options": {
        "config-opts": [
          "-DCMAKE_BUILD_TYPE=Release"
        ]
      },
      "sources": [
        {
          "sha256": "d25866a4ee275a64f65be2d9a663680a5cf1ed87b7ee4c534997562c828e500d",
          "type": "archive",
          "url": "https://github.com/libgit2/libgit2/archive/refs/tags/v1.6.4.tar.gz"
        }
      ]
    },
    {
      "name": "python3-pygit2",
      "buildsystem": "simple",
      "build-commands": [
        "pip3 install --verbose --exists-action=i --no-index --find-links=\"file://${PWD}\" --prefix=${FLATPAK_DEST} \"pygit2\" --no-build-isolation"
      ],
      "sources": [
        {
          "type": "file",
          "url": "https://files.pythonhosted.org/packages/2b/a8/050ab4f0c3d4c1b8aaa805f70e26e84d0e27004907c5b8ecc1d31815f92a/cffi-1.15.1.tar.gz",
          "sha256": "d400bfb9a37b1351253cb402671cea7e89bdecc294e8016a707f6d1d8ac934f9"
        },
        {
          "type": "file",
          "url": "https://files.pythonhosted.org/packages/62/d5/5f610ebe421e85889f2e55e33b7f9a6795bd982198517d912eb1c76e1a53/pycparser-2.21-py2.py3-none-any.whl",
          "sha256": "8ee45429555515e1f6b185e78100aea234072576aa43ab53aefcae078162fca9"
        },
        {
          "type": "file",
          "url": "https://files.pythonhosted.org/packages/7f/00/075f21ae474fcef679ba1f71b9ecd534493792b508b1919021fb2be67eba/pygit2-1.12.0.tar.gz",
          "sha256": "e9440d08665e35278989939590a53f37a938eada4f9446844930aa2ee30d73be"
        }
      ]
    }
  ]
}
